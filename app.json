{
  "expo": {
    "name": "Truyá»‡n",
    "slug": "tx-truyen",
    "version": "1.3.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "tx-truyen",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tungxuan.rnreadbooks",
      "buildNumber": "0",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSMicrophoneUsageDescription": "This app needs access to microphone for audio playback",
        "NSCameraUsageDescription": "This app does not use camera"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tungxuan.readbooks",
      "versionCode": 1
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Inter-Bold.ttf",
            "./assets/fonts/Inter-Medium.ttf",
            "./assets/fonts/Inter-Regular.ttf",
            "./assets/fonts/Inter-SemiBold.ttf",
            "./assets/fonts/Montserrat-Regular.ttf",
            "./assets/fonts/NotoSans-Regular.ttf",
            "./assets/fonts/OpenSans-Regular.ttf",
            "./assets/fonts/Raleway-Regular.ttf",
            "./assets/fonts/Roboto-Regular.ttf",
            "./assets/fonts/SpaceMono-Regular.ttf",
            "./assets/fonts/WorkSans-Regular.ttf"
          ]
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.5"
          }
        }
      ],
      "expo-audio",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
