{
  "expo": {
    "name": "Truyá»‡n",
    "slug": "tx-truyen",
    "version": "1.4.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "tx-truyen",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tungxuan.rnreadbooks",
      "buildNumber": "0",
      "infoPlist": {
        "UIBackgroundModes": ["audio"],
        "NSMicrophoneUsageDescription": "This app needs access to microphone for audio playback",
        "NSCameraUsageDescription": "This app does not use camera"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tungxuan.readbooks",
      "versionCode": 1
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Arial.ttf",
            "./assets/fonts/Georgia.ttf",
            "./assets/fonts/Inter.ttf",
            "./assets/fonts/Lato.ttf",
            "./assets/fonts/Lora.ttf",
            "./assets/fonts/Merriweather.ttf",
            "./assets/fonts/Montserrat.ttf",
            "./assets/fonts/MontserratAlternates.ttf",
            "./assets/fonts/NotoSans.ttf",
            "./assets/fonts/NotoSerif.ttf",
            "./assets/fonts/OpenSans.ttf",
            "./assets/fonts/PTSans.ttf",
            "./assets/fonts/PTSerif.ttf",
            "./assets/fonts/Raleway.ttf",
            "./assets/fonts/Roboto.ttf",
            "./assets/fonts/SpaceMono.ttf",
            "./assets/fonts/TimesNewRoman.ttf",
            "./assets/fonts/Verdana.ttf",
            "./assets/fonts/WorkSans.ttf"
          ]
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.5"
          }
        }
      ],
      "expo-web-browser",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
